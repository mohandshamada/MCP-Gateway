{
  "name": "mcp-gateway",
  "version": "1.0.0",
  "description": "Federated MCP Gateway Service - Aggregates multiple MCP servers into a single authenticated endpoint",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "setup:mcp": "npm run setup:playwright && npm run setup:dirs",
    "setup:playwright": "npx playwright install chromium",
    "setup:dirs": "node -e \"const fs=require('fs'); ['mcp-data/data','mcp-data/logs','mcp-data/cache','mcp-data/temp','mcp-data/uploads','mcp-data/downloads','mcp-data/screenshots','mcp-data/workspace'].forEach(d => { fs.mkdirSync(d, {recursive:true,mode:0o777}); fs.chmodSync(d,0o777); });\"",
    "postinstall": "npm run setup:dirs 2>/dev/null || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gateway",
    "federation",
    "aggregation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "eventsource": "^2.0.2",
    "fastify": "^4.28.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "@modelcontextprotocol/server-filesystem": "^2025.11.25",
    "@modelcontextprotocol/server-memory": "^2025.11.25",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.11.25",
    "@wonderwhy-er/desktop-commander": "^0.2.23",
    "@playwright/mcp": "^0.0.49"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^8.57.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
